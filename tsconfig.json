{
  "compilerOptions": {
    "allowJs": true,
    "outDir": ".build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["esnext"],
    "target": "es2016",
    "typeRoots": ["./node_modules/@types/", "./index.d.ts"],
    "preserveSymlinks": true,
    "baseUrl": ".",
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules/**",
    ".build",
    "./*.js"
  ],
}